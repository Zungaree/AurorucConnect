<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/background_curved">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="Welcome, Ron"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/cardImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:scaleType="fitXY"
        android:src="@drawable/platinum"
        app:cornerRadius="20dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeTextView"
        tools:layout_editor_absoluteX="24dp" />

        <Button

            android:id="@+id/checkInButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/rounded_button"
            android:drawableStart="@drawable/ic_nfc_check_in"
            android:drawablePadding="8dp"
            android:drawableTint="@android:color/white"
            android:padding="16dp"
            android:text="Check-in"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            app:backgroundTint="#122F4F"
            app:layout_constraintTop_toBottomOf="@id/cardImageView"
            tools:layout_editor_absoluteX="24dp" />

    <Button
        android:id="@+id/battlePassButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_button_dark"
        android:drawableStart="@android:drawable/ic_menu_my_calendar"
        android:drawablePadding="8dp"
        android:drawableTint="@android:color/white"
        android:padding="16dp"
        android:text="Battle Pass"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:backgroundTint="#122F4F"
        app:layout_constraintTop_toBottomOf="@id/checkInButton" />

    <LinearLayout
        android:id="@+id/bottomButtonsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/battlePassButton">

        <Button
            android:id="@+id/storeCreditsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_dark"
            android:drawableStart="@android:drawable/ic_menu_info_details"
            android:drawablePadding="8dp"
            android:drawableTint="@android:color/white"
            android:padding="16dp"
            android:text="Store Credits"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:backgroundTint="#122F4F"
            />

        <Button
            android:id="@+id/accountButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_dark"
            android:drawableStart="@android:drawable/ic_menu_manage"
            android:drawablePadding="8dp"
            android:drawableTint="@android:color/white"
            android:padding="16dp"
            android:text="Account"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            app:backgroundTint="#122F4F"
            />
    </LinearLayout>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:padding="16dp"
        android:text="Logout"
        android:textColor="#122F4F"
        android:textSize="16sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:strokeColor="#122F4F"
        app:strokeWidth="3dp"
        tools:layout_editor_absoluteX="24dp" />

    <!-- Feed header -->

        <!-- Single horizontal carousel -->

        <TextView
            android:id="@+id/feedHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:text="Events"
            android:textColor="@color/primary_dark"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottomButtonsContainer" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/feedRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            app:layout_constraintBottom_toTopOf="@id/logoutButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/feedHeader"
            tools:listitem="@layout/item_horizontal_card" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>